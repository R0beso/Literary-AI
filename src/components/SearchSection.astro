<section class="search-section">
  <div id="click">
    <strong>
      <span class="breadcrumb">Home &gt;</span>
    </strong>
  </div>
  <div class="search-bar">
      <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
      </svg>
    <input type="text" id="input" placeholder="Search Term">
  </div>
</section>

<script>
  import json from '../text-content/static/search-section.json';

  function defineText() {
    let text, input;

    if (document.documentElement.lang === "en") {
        text = json.english.text;
        input = json.english.input;
    } else {
        text = json.spanish.text;
        input = json.spanish.input;
    }

    const textElement = document.querySelector('.breadcrumb');
    const inputElement = document.getElementById('input');

    if (textElement) textElement.textContent = text;
    if (inputElement) inputElement.setAttribute('placeholder', input);
  }

  defineText();
  const clickDiv = document.querySelector('.flags');

  if (clickDiv) {
      clickDiv.addEventListener('click', () => {
        defineText();
    });
  }

</script>

<style>
    
.search-section {
    display: flex;
    align-items: center;
    justify-content: start;
    background-color: #1F2020;
    padding: 10px 20px;
    border-top: 1px solid white;
    border-bottom: 1px solid white;
    gap: 20px;
}

.breadcrumb {
    color: white;
    font-size: 14px;
    font-family: 'Cascadia Mono', 'Segoe UI', Arial;
}

.search-bar {
    display: flex;
    align-items: center;
    background-color: white;
    padding: 5px 10px;
    border-radius: 4px;
}

.search-bar input {
    border: none;
    outline: none;
    padding: 5px;
    font-size: 14px;
    font-family: 'Segoe UI', Arial;
}

.search-icon {
  width: 20px;
  height: 20px;
  color: #333; /* Color gris por defecto */
  transition: color 0.3s ease;
}

.search-icon:hover {
  color: #000; /* Cambia a negro cuando pases el mouse */
}

/* Responsive */
@media (max-width: 330px) {
  
    .search-section {
        flex-direction: column;
        align-items: flex-start;
    }
}

@media (min-width: 1600px) {
    .search-section {
        padding: 10px 200px;
    }
}

@media (min-width: 1600px) {
