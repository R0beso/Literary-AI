<style>

    main {
        color: aliceblue;
        padding: 25px 20px 5px 20px;
        max-width: 900px;
        text-align: left;
        margin: 0.5rem auto auto auto;
    }

    .triplet{
        display: flex;
        gap: 5px;
        margin-bottom: 30px;
        padding: 0 20px;
