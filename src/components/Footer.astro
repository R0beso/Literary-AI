<script>
  import json from '../text-content/static/footer.json';

  function defineText() {
    let footer;

    if (document.documentElement.lang === "en") footer = json.english.footer; 
    else footer = json.spanish.footer;

    const footerElement = document.getElementById('changeText');

    if (footerElement) footerElement.textContent = footer;

  }

  defineText();
  const clickDiv = document.querySelector('.flags');

  if (clickDiv) {
      clickDiv.addEventListener('click', () => {
        defineText();
    });
  }

  const yearElement = document.getElementById('year');
  if (yearElement) yearElement.textContent = new Date().getFullYear().toString();
    
</script>
    
  